<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E6E6FA"
    tools:context="com.example.mirella.pokedex.Item1Activity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botao_deletar"
        android:background="#fff"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNome"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Nome" />

            <!--<EditText-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/txtTipo"-->
                <!--android:layout_below="@+id/txtNome"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:hint="Tipo" />-->

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPeso"
                android:layout_below="@+id/txtNome"
                android:layout_alignParentStart="true"
                android:hint="Peso" />

            <!--<EditText-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/txtSexo"-->
                <!--android:layout_below="@+id/txtPeso"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:hint="Sexo" />-->

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtAltura"
                android:layout_below="@+id/txtSexo"
                android:layout_alignParentStart="true"
                android:hint="Altura" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtHabilidades"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:hint="Habilidades" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtStatus"
                android:layout_below="@+id/txtHabilidades"
                android:layout_alignParentStart="true"
                android:hint="Status" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNivelEvolucao"
                android:layout_below="@+id/txtStatus"
                android:layout_alignParentStart="true"
                android:hint="Nível de evolução" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTipo"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/txtNivelEvolucao"
                android:layout_weight="1"
                android:entries="@array/tipos"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerSexo"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/txtNivelEvolucao"
                android:layout_weight="1"
                android:entries="@array/sexo"
                android:spinnerMode="dropdown" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:id="@+id/btnUpdate"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Galeria"
                android:id="@+id/btnGaleria"
                android:layout_above="@+id/btnUpdate"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>